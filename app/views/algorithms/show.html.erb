<head>
<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.7.0/styles/default.min.css">
<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
<style>
     h1 {
      font-family: 'Roboto', serif;
      font-size: 48px;
     }
	span.fancy {
    color: red;
		font-family: 'Tangerine';
		font-size: 30px;
}

</style>
</head>

<!--<p id="notice"><%= notice %></p>-->

<p>
  <h1><center><%= @algorithm.name %></center></h1>
</p>

<br>
</br>
<center>
<h2>
  <strong>Purpose:</strong>
	<span class='italic'>
		<%= @algorithm.purpose %>
	</span>
</h2>
</center>
<br>
</br>
<h2>
  <strong><center>Description:</center></strong>
</h2>
<p>

<pre class="description">
  <%= @algorithm.description %>
</pre>
</p>
<p>
<center>
<img src=<%= @algorithm.link %> alt="Smiley face" height="400" width="400">
</center>
</p>

<%= select_tag :code_language, options_for_select(Algorithm::ALGORITHM_LANGUAGES), :id => "code_language" %>

<h2>
  <strong><center>Pseudocode:</center></strong>
</h2>
<pre class="prettyprint">
<code>
	<div id="text_to_be_changed"><%= @algorithm.Python %></div>
</code>
</pre>
<h2>
  <strong><center>Complexity Analysis:</center></strong>
</h2>
<pre>
  <%= @algorithm.complexityAnalysis %>
</pre>
<h3>
  <strong>Difficulty: </strong><%= @algorithm.difficulty %>
</h3>
<h3>
  <strong>Author:</strong>
	<span class='fancy'>
		<%= @algorithm.author %>
	</span>
</h3>
<div><%= render @algorithm.tags %></div>


<%= link_to 'Edit', edit_algorithm_path(@algorithm) %>
<%= link_to 'Back', algorithms_path %>


<script>
$(document).ready(function(){
    $('#code_language').change(function() {
				var mystring="<\%= escape_javascript @algorithm."+"pseudoCode"+" \%>";
				console.log(mystring);
				var x=$(this).val();
				console.log(x)
				console.log("<%= escape_javascript @algorithm.pseudoCode %>");
        $('#text_to_be_changed').html("<%= escape_javascript @algorithm.pseudoCode %>");
    });
});
</script>
