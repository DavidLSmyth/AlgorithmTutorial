<h1>Listing algorithms</h1>

<table>
      <%= content_tag :tr, class: cycle('list_line_odd', 'list_line_even') do %>
  <td>
    <%= image_tag(algorithms.link, class: 'list_image') %>
  </td>
    <% end %>
  <tbody>
    <% @algorithms.each do |algorithm| %>
      <tr>
        <td><%= algorithm.name %></td>
        <td><%= algorithm.description %></td>
        <td><%= algorithm.link %></td>
        <td><%= algorithm.pseudoCode %></td>
        <td><%= algorithm.complexityAnalysis %></td>
        <td><%= algorithm.difficulty %></td>
        <td><%= algorithm.author %></td>
        <td><%= link_to 'Show', algorithm %></td>
        <td><%= link_to 'Edit', edit_algorithm_path(algorithm) %></td>
        <td><%= link_to 'Destroy', algorithm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

