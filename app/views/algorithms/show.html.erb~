<script>
$(document).ready(function(){
    $('#code_language').change(function() {
			console.log(this.value)
      if(this.value == 'pseudoCode'){
				console.log('logged'+this.value)
        $("#pseudoCode").show();
				$("#Python").hide();
				$("#Java").hide();
				$("#Cpp").hide();
				$("#Ruby").hide();
      }
      else if(this.value == 'Python'){
				console.log('now logged'+this.value)
        $("#pseudoCode").hide();
				$("#Python").show();
				$("#Java").hide();
				$("#Cpp").hide();
				$("#Ruby").hide();
      }
			else if(this.value == 'Java'){
				$("#pseudoCode").hide();
				$("#Python").hide();
				$("#Java").show();
				$("#Cpp").hide();
				$("#Ruby").hide();
			}
			else if(this.value == 'Cpp'){
				$("#pseudoCode").hide();
				$("#Python").hide();
				$("#Java").hide();
				$("#Cpp").show();
				$("#Ruby").hide();
			}
			else if(this.value == 'Ruby'){
				$("#pseudoCode").hide();
				$("#Python").hide();
				$("#Java").hide();
				$("#Cpp").hide();
				$("#Ruby").show();
			}
    });
});
</script>
