<div class="row text-center">
  <%= form_for(Algorithm.new, remote: true) do |f| %>

    <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

	<div class="field">
    <%= f.label :purpose %><br>
    <%= f.text_field :purpose %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :pseudoCode %><br>
    <%= f.text_area :pseudoCode %>
  </div>
  <div class="field">
    <%= f.label :complexityAnalysis %><br>
    <%= f.text_area :complexityAnalysis %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.number_field :difficulty %>
  </div>

  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>



    <div class="large-10 large-centered columns">
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
    </div>


  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
